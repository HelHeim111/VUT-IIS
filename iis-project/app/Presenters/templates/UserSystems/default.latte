{block content}
    <h1>User Systems</h1>

    <ul>
        {foreach $userSystems as $userSystem}
            <li>
                <a href="{link Systeminfo:default, $userSystem->system_id}"> {$userSystem->system_name}</a>
                <a href="{link delete, $userSystem->system_id}" onclick="return confirm('Opravdu chcete smazat system?');">Smazat</a>
            </li>
        {/foreach}
    </ul>

    <a href="{link createSystemForm}">Create New System</a>

    
{/block}
